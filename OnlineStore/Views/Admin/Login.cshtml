@model LoginModel
    @{
    Layout = null;
    }
    <h2>Log in</h2>

    <form asp-action="Login" asp-controller="Admin" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="form-group">
                <label asp-for="Email">Enter your Email</label>
                <input type="email" asp-for="Email" placeholder="examle@mail.ru" />
                <span asp-validation-for="Email" />
            </div>
            <div class="form-group">
                <label asp-for="Password">Enter your password</label>
                <input type="password" asp-for="Password" placeholder="example" />
                <span asp-validation-for="Password" />
            </div>
            <div class="form-group">
                <input type="submit" value="Log in" class="btn btn-outline-dark" />
            </div>
        </div>
    </form>