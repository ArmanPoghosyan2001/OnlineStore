<h2>Fill the form</h2>
@{
    Layout = "_LayoutForAdmin";
}
<form method="post">
    <table>
        <tr>

            <td><label for="name">Name:</label></td>
            <td><input type="text" name="Name" id="name" placeholder="Phone" /> </td>
        </tr>
        <tr>
            <td><label for="compName">CompanyName:</label></td>
            <td><input type="text" name="CompanyName" id="compName" placeholder="Company" /></td>
        </tr>
        <tr>
            <td><label for="ram">RAM:</label></td>
            <td> <input type="text" name="RAM" id="ram" placeholder="RAM size" /> </td>
        </tr>
        <tr>
            <td><label for="memory">Memory:</label></td>
            <td> <input type="text" name="Memory" id="memory" placeholder="Memory size" /></td>
        </tr>
        <tr>
            <td><label for="price">Price:</label></td>
            <td> <input type="text" name="Price" id="price" placeholder="Price" /></td>
        </tr>

        <tr>
            <td>
            </td>
            <td>
                <input type="reset" value="Clear" />
                <input type="submit" value="Create" />
            </td>
            <td></td>
        </tr>
    </table>
</form>
